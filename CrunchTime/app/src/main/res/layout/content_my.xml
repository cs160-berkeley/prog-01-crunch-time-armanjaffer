<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/tom"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="com.cs160.arman.crunchtime.myActivity"
    tools:showIn="@layout/activity_my">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ITS CRUNCH TIME!!!"
        android:id="@+id/textView"
        android:textSize="55sp"
        android:textColor="#FFA500"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pushups"
        android:id="@+id/button"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView"
        android:textSize="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Situps"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumping Jacks"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jogging"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Squats"
        android:id="@+id/button6"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leglifts"
        android:id="@+id/button7"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Planks"
        android:id="@+id/button8"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pullups"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cylcing"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Walking"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swimming"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_alignStart="@+id/button11"
        android:textSize="50sp"/>

    <Button
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stair-climbing"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_alignStart="@+id/button12"
        android:textSize="50sp"/>



</RelativeLayout>
